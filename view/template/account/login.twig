{{ header }}
<div class="bg-image overflow-auto d-flex justify-content-center align-items-start align-items-md-center" style="background-image: url('{{ server }}view/img/bg.jpg'); min-height: 100vh;">
  <div class="position-absolute" style="top: 4px; right: 0;">{{ language_selector }}</div>
  <div class="rounded-4 row overflow-hidden mw-100 m-1" style="width: 800px;">
	<div class="col-12 col-md-5 d-flex align-items-center justify-content-center bg-dark bg-opacity-75 text-white p-1 fs-4"><b>{{ text_welcome }}</b></div>
	<div class="col-12 col-md-7 bg-light p-5 text-dark">
	  <div class="d-flex align-items-center mb-3 pb-2">
		<img src="{{ server }}view/img/logo.png" class="w-100" style="margin-left: -5px;"/>
	  </div>
	  {% if error_warning %}
	  <div class="alert alert-dismissible fade show" role="alert" data-mdb-color="danger"><i class="fa fa-exclamation-circle me-2"></i>{{ error_warning }}<button type="button" class="btn-close" data-mdb-dismiss="alert" aria-label="Close"></button></div>
	  {% endif %}
	  {% if success %}
	  <div class="alert alert-dismissible fade show" role="alert" data-mdb-color="success"><i class="fa fa-exclamation-circle me-2"></i>{{ success }}<button type="button" class="btn-close" data-mdb-dismiss="alert" aria-label="Close"></button></div>
	  {% endif %}
	  <h5 class="fw-normal text-body mb-3 pb-3" style="letter-spacing: 1px;">{{ text_login }}</h5>
	  <form action="{{ action }}" class="needs-validation" method="post" novalidate>
		<div class="form-outline mb-4">
		  <i class="fas fa-envelope trailing"></i>
		  <input type="text" name="email" value="{{ email }}" class="form-control" required/>
		  <label class="form-label">{{ entry_email }}</label>
		</div>
		<div class="form-outline mb-4">
		  <i class="fas fa-lock trailing"></i>
		  <input type="password" name="password" value="{{ password }}" class="form-control" required/>
		  <label class="form-label">{{ entry_password }}</label>
		</div>
		<div class="pt-1 mb-4">
          <button id="btn-submit" class="btn btn-dark btn-lg btn-block" type="submit">{{ button_login }}</button>
        </div>
		{% if redirect %}
		<input type="hidden" name="redirect" value="{{ redirect }}" />
		{% endif %}
	  </form>
	  <a class="small text-muted" href="{{ forgotten }}">{{ text_forgotten }}</a>
	  <p style="color: #393f81;"><a href="{{ register }}" style="color: #393f81;">{{ text_register }}</a></p>
	</div>
  </div>
</div>
<script>
const forms = document.querySelectorAll('.needs-validation');

Array.prototype.slice.call(forms).forEach((form) => {
  form.addEventListener('submit', (event) => {
	if (!form.checkValidity()) {
	  event.preventDefault();
	  event.stopPropagation();
	}
	form.classList.add('was-validated');
  }, false);
});
</script>
{{ footer }}