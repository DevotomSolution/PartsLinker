{{ header }}{{ navigation }}
<!--Main layout-->
<main style="margin-top: 58px" class="pt-3">
  <div class="container-fluid">
	{% for vehicle_brand in vehicle_brands %}
	<label class="d-flex vehicle_brand cursor-pointer p-1">
	  <div class="flex-fill">{{ vehicle_brand.name }}</div>
	  <div><input class="form-check-input vehicle_brand-check" type="checkbox" id="{{ vehicle_brand.id }}" value="1" {% if user_vehicle_brands[vehicle_brand.id] %}checked{% endif %} /></div>
	</label>
	{% endfor %}
	<div class="row mt-3">
	  <div class="col-sm-6 text-start">{{ pagination }}</div>
	  <div class="col-sm-6 text-end">{{ results }}</div>
	</div>
  </div>
</main>
{{ footer }}
<script>
$('.vehicle_brand-check').change(function(e) {
  let url = '';
  
  if(e.currentTarget.checked) {
	url += '{{ server }}index.php?route=catalog/vehicle_brand.enableVehicleBrand&user_token={{ user_token }}';
  } else {
    url += '{{ server }}index.php?route=catalog/vehicle_brand.disableVehicleBrand&user_token={{ user_token }}';
  }
  
  url += '&vehicle_brand_id=' + e.currentTarget.id;
  
  $.ajax({
	url: url
  });
});
</script>
<style>
.vehicle_brand {
  cursor: pointer;
}
.vehicle_brand:hover {
  background-color: rgb(0, 0, 0, 0.05);
}
</style>