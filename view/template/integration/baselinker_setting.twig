{{ header }}{{ navigation }}
<main style="margin-top: 58px" class="pt-4">
<div class="container-fluid">
  <div class="text-end mb-3">
    <a href="{{ connect }}" class="btn btn-link " data-mdb-ripple-color="dark"><i class="fas fa-link me-2"></i>{{ text_connect }}</a>
	<span class="btn btn-link text-dark" data-mdb-ripple-color="dark"><i class="fas fa-tools me-2"></i>{{ text_setting }}</span>
	<a href="{{ home }}" class="btn btn-link " data-mdb-ripple-color="dark"><i class="fas fa-home me-2"></i>{{ text_home }}</a>
  </div>
  {% if error_warning %}
  <div class="alert alert-dismissible fade show" role="alert" data-mdb-color="danger"><i class="fa fa-exclamation-circle me-2"></i>{{ error_warning }}<button type="button" class="btn-close" data-mdb-dismiss="alert" aria-label="Close"></button></div>
  {% endif %}
  {% if success %}
  <div class="alert alert-dismissible fade show" role="alert" data-mdb-color="success"><i class="fa fa-exclamation-circle me-2"></i>{{ success }}<button type="button" class="btn-close" data-mdb-dismiss="alert" aria-label="Close"></button></div>
  {% endif %}
  <form method="POST" action="{{ action }}">
	<div class="mt-3">
	  <select class="select" name="inventory_id">
		<option value="">{{ text_select }}</option>
		{% for inventory in inventories %}
		<option value="{{ inventory.inventory_id }}" {% if inventory_id == inventory.inventory_id %}selected{% endif %}>{{ inventory.name }}</option>
		{% endfor %}
	  </select>
	  <label class="form-label select-label">{{ select_inventory }}</label>
	</div>
	<div class="mt-3">
	  <select class="select" name="warehouse_id">
		<option value="">{{ text_select }}</option>
		{% for warehouse in warehouses %}
		<option value="{{ warehouse.id }}" {% if warehouse_id == warehouse.id %}selected{% endif %}>{{ warehouse.name }}</option>
		{% endfor %}
	  </select>
	  <label class="form-label select-label">{{ select_warehouse }}</label>
	</div>
	<div class="mt-3">
	  <select id="select-price_group" class="select" name="price_group_id">
		<option value="">{{ text_select }}</option>
		{% for price_group in price_groups %}
		<option value="{{ price_group.price_group_id }}" data-currency="{{ price_group.currency }}" {% if price_group_id == price_group.price_group_id %}selected{% endif %}>{{ price_group.name }}</option>
		{% endfor %}
	  </select>
	  <label class="form-label select-label">{{ select_price_group }}</label>
	</div>
	<input type="hidden" id="input-currency" name="currency" value="{{ currency }}" />
	<div class="mt-3">
	  <textarea id="input-general_description" name="general_description">{{ general_description }}</textarea>
	</div>
	<button type="submit" class="btn btn-primary ps-5 pe-5 mt-3 mb-3"><i class="fa fa-save me-2"></i>{{ button_save }}</button>
  </form>
</div>
</main>
<script>
$(document).ready(function() {
 $('#input-general_description').summernote({
	height: 175,
	toolbar: false,
	disableDragAndDrop: true,
	tabDisable: true,
	placeholder: '{{ entry_general_description }}',
	callbacks: {
	  onPaste: function(e) {
		var bufferText = ((e.originalEvent || e).clipboardData || window.clipboardData).getData('Text');
		e.preventDefault();
		setTimeout( function(){
		  document.execCommand('insertText', false, bufferText);
		}, 10);
	  }
	}
  });
});

$('#select-price_group').change(function(e) {
  $('#input-currency').val($('#select-price_group').find('option:selected').attr('data-currency'));
});
</script>
